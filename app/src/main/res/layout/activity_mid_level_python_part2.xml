<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="22dp"
            cardView:cardElevation="10dp"
            cardView:cardBackgroundColor="#BBBEC8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_dict"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_course"
                    android:contentDescription="Dictionaries"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/title_dict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mid Level Python - Part 2"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1565CB"
                    android:layout_marginTop="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Dictionaries -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dictionaries in Python"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dictionaries are collections of key-value pairs. Keys must be unique and immutable, values can be any type."
            android:textSize="15sp"
            android:textColor="#222C58"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example:"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='person = {"name": "Rohan", "age": 21}\nperson["city"] = "Dhaka"'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Section: Accessing & Modifying -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessing and Modifying"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='print(person["name"])\nperson["age"] = 22'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Section: Useful Methods -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Useful Methods"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='person.keys()\nperson.values()\nperson.items()'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Use dictionaries for fast lookups by key.\n• Keys must be unique (no duplicates)."
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckKnowledge"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TEST"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>