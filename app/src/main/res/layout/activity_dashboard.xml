<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top app bar/user info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="42dp"
                android:paddingBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:background="@drawable/circle_white"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcome_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rohan Rusho"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Menu icon at top right -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu"
                    android:tint="#222222"/>
            </LinearLayout>

            <!-- Progress summary card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_gradient_card"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="18dp"
                android:padding="24dp"
                android:elevation="2dp"
                android:clipToOutline="true"
                android:backgroundTintMode="src_over">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Progress"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/total_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Points: 0"
                    android:textSize="26sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Topics progress list -->
                <LinearLayout
                    android:id="@+id/topics_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Python Basic -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Python Basic"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvBasicPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            tools:text="50%"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBarBasic"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        tools:progress="50"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar_green"
                        android:layout_marginBottom="14dp"/>

                    <!-- Variable of Python / Mid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Variable of Python"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvVariablePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            tools:text="45%"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBarVariable"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        tools:progress="45"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar_orange"
                        android:layout_marginBottom="14dp"/>

                    <!-- Python Advance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Python Advance"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvAdvancePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            tools:text="20%"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBarAdvance"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        tools:progress="20"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar_red"
                        android:layout_marginBottom="14dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Recommendation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_weight="1"
                        android:background="#DADADA"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommendation for Learning"
                        android:textColor="#383838"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="8dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_weight="1"
                        android:background="#DADADA"/>
                </LinearLayout>

                <!-- Card 1: Python Basic -->
                <LinearLayout
                    android:id="@+id/cardPythonBasic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_orange"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="1dp"
                    android:clipToOutline="true"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_course"
                        android:background="@drawable/circle_orange"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Python Basic"
                            android:textColor="#272727"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: Python is programming language..."
                            android:textColor="#747474"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/tvCardBasicProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress: 0%"
                            tools:text="Progress: 50%"
                            android:textColor="#272727"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Level"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="1dp"/>
                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/pbCardBasic"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="0"
                            tools:progress="50"
                            android:max="100"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/progressbar_green"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Card 2: Variable of Python (Mid) -->
                <LinearLayout
                    android:id="@+id/cardPythonMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_blue"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="1dp"
                    android:clipToOutline="true"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_course"
                        android:background="@drawable/circle_blue"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mid Level of Python"
                            android:textColor="#272727"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: All can be perfect in any..."
                            android:textColor="#747474"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/tvCardMidProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress: 0%"
                            tools:text="Progress: 45%"
                            android:textColor="#272727"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mid Level"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="1dp"/>
                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/pbCardMid"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="0"
                            tools:progress="45"
                            android:max="100"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/progressbar_orange"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Card 3: Python Advance -->
                <LinearLayout
                    android:id="@+id/cardPythonAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg_green"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="1dp"
                    android:clipToOutline="true"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_course"
                        android:background="@drawable/circle_green"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Python Advance"
                            android:textColor="#272727"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: All can be perfect in prog..."
                            android:textColor="#747474"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/tvCardAdvanceProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress: 0%"
                            tools:text="Progress: 20%"
                            android:textColor="#272727"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hard Level"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="1dp"/>
                        <!-- ProgressBar -->
                        <ProgressBar
                            android:id="@+id/pbCardAdvance"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="0"
                            tools:progress="20"
                            android:max="100"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/progressbar_red"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Drawer (END/Right) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#2851A3"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/dashboard_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>