<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="8dp"
            cardView:cardBackgroundColor="#BBBEC8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="22dp">

                <ImageView
                    android:id="@+id/icon_datatypes"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_course"
                    android:contentDescription="Data Types"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/title_datatypes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Python - Part 2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1565CB"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- What are Data Types? -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are Data Types?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data types determine the kind of value a variable can hold in Python, such as numbers, text, or lists."
            android:textSize="15sp"
            android:textColor="#222C58"
            android:layout_marginBottom="14dp"/>

        <!-- Common Data Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common Data Types"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• int - whole numbers (e.g., 5)\n• float - decimal numbers (e.g., 3.14)\n• str - text \n• bool - True/False values\n• list - ordered collection (e.g., [1, 2, 3])"
        android:textSize="14sp"
        android:textColor="#222C58"
        android:layout_marginBottom="14dp"/>

        <!-- Examples -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examples"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='num = 7\nprice = 19.99\nname = "Rohan"\nis_valid = True\ncolors = ["red", "green", "blue"]'
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Use type(your_var) to check a variable's data type.\n• Lists can hold any mix of data types.\n• Strings are always in quotes."
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="24dp"/>

        <!-- Quiz Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckKnowledge"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TEST"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>