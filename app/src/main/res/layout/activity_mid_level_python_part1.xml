<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="22dp"
            cardView:cardElevation="10dp"
            cardView:cardBackgroundColor="#BBBEC8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_lists"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_course"
                    android:contentDescription="Lists and Tuples"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/title_lists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mid Level Python - Part 1"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1565CB"
                    android:layout_marginTop="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: About Lists -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python Lists"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lists are ordered, mutable collections, allowing duplicate elements. You can add, remove, or change items."
            android:textSize="15sp"
            android:textColor="#222C58"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example:"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='numbers = [10, 20, 30]\nnumbers[1] = 99  # [10, 99, 30]\nnumbers.append(42)  # [10, 99, 30, 42]'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Section: About Tuples -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python Tuples"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuples are ordered, immutable collections. Once created, their contents cannot be changed."
            android:textSize="15sp"
            android:textColor="#222C58"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example:"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='colors = ("red", "green", "blue")\nprint(colors[0])  # red'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Section: List vs Tuple -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List vs Tuple"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Lists: mutable, slower, use []\n• Tuples: immutable, faster, use ()"
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="10dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Use lists when you need to change, add, or remove items.\n• Use tuples for data you don’t want to modify."
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckKnowledge"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TEST"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>