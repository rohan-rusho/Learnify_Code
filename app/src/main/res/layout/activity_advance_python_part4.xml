<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="22dp"
            cardView:cardElevation="10dp"
            cardView:cardBackgroundColor="#BBBEC8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_exceptions"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_course"
                    android:contentDescription="Exceptions"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/title_exceptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Python - Part 4"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1565CB"
                    android:layout_marginTop="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- What is Exception Handling? -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Exception Handling?"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exception handling lets you respond to errors gracefully. Use try, except, else, and finally blocks."
            android:textSize="16sp"
            android:textColor="#222C58"
            android:layout_marginBottom="14dp"/>

        <!-- Section: Example -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Example"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='try:\n    x = int(input("Number: "))\n    print(10 / x)\nexcept ZeroDivisionError:\n    print("Cannot divide by zero!")\nexcept ValueError:\n    print("Not a valid number!")\nfinally:\n    print("Done!")'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="14dp"/>

        <!-- Section: Raising Exceptions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raising Exceptions"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="17sp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='def inverse(x):\n    if x == 0:\n        raise ValueError("No zero!")\n    return 1/x'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Catch specific exceptions first.\n• Use finally for cleanup.\n• Raise exceptions for bad input in your own functions."
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckKnowledge"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TEST"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>