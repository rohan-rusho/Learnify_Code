<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="60dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learnify Code"
            android:textColor="#FFA726"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free app for learning codes"
            android:textColor="#1565CB"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="28dp"/>

        <!-- Name input -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="14dp"
            android:hint="Enter your name"
            android:textColor="#222C58"
            android:textColorHint="#888888"
            android:background="@drawable/edittext_outline_blue"
            android:paddingHorizontal="14dp"
            android:textSize="16sp"
            android:inputType="textPersonName"/>

        <!-- Email input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="14dp"
            android:hint="Enter your e-mail"
            android:textColor="#222C58"
            android:textColorHint="#888888"
            android:background="@drawable/edittext_outline_blue"
            android:paddingHorizontal="14dp"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>

        <!-- Password input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="14dp"
            android:hint="Password"
            android:textColor="#222C58"
            android:textColorHint="#888888"
            android:background="@drawable/edittext_outline_blue"
            android:paddingHorizontal="14dp"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <!-- Confirm Password input -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="14dp"
            android:hint="Confirm Password"
            android:textColor="#222C58"
            android:textColorHint="#888888"
            android:background="@drawable/edittext_outline_blue"
            android:paddingHorizontal="14dp"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <!-- SIGN UP Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_orange"
            android:elevation="4dp"/>

        <!-- Small spinner shown during sign-up -->
        <ProgressBar
            android:id="@+id/progressSignup"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Already have account? LOGIN Button (flat) -->
        <TextView
            android:id="@+id/tvAlreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#888888"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>