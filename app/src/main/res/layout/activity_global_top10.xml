<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <!-- Toolbar/title -->

    <!-- Top 10 List -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#1565CB"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOP 10 Globally"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:paddingTop="52dp"
            android:paddingBottom="20dp"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/top10_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example item, repeat for 10 users dynamically in code -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg_white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvRank"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_blue"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:background="@drawable/circle_white"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="14dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rohan Rusho"
                        android:textColor="#272727"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points: 1200"
                        android:textColor="#1565CB"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat above block for each of the 10 users (in code, not XML) -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>