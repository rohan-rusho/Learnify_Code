<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="22dp"
            cardView:cardElevation="10dp"
            cardView:cardBackgroundColor="#BBBEC8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/icon_generators"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_course"
                    android:contentDescription="Generators"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/title_generators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Python - Part 3"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1565CB"
                    android:layout_marginTop="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- What are Generators? -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are Generators?"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generators let you iterate over data without storing it all in memory. Use 'yield' instead of 'return' in a function."
            android:textSize="16sp"
            android:textColor="#222C58"
            android:layout_marginBottom="14dp"/>

        <!-- Section: Generator Example -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generator Example"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='def count_up(n):\n    for i in range(n):\n        yield i\n\nfor num in count_up(3):\n    print(num)'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="14dp"/>

        <!-- Section: Iterators -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iterators"
            android:textStyle="bold"
            android:textColor="#F9A825"
            android:textSize="17sp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An object is iterable if you can use it in a for loop. Generators are iterators. Use iter() and next() to manually control them."
            android:textSize="15sp"
            android:textColor="#222C58"
            android:layout_marginBottom="13dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='nums = iter([1,2,3])\nprint(next(nums))  # 1'
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="#1565CB"
            android:textIsSelectable="true"
            android:layout_marginBottom="10dp"/>

        <!-- Tips -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1565CB"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Generators are memory efficient for large data.\n• Use them for pipelines, streams, or infinite sequences."
            android:textSize="14sp"
            android:textColor="#222C58"
            android:layout_marginBottom="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckKnowledge"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TEST"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_gradient_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>